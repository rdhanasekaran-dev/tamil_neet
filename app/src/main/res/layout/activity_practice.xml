<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".practice.PracticeActivity">
    <ScrollView
        android:layout_above="@id/bott"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/p_question_no"
                android:layout_marginTop="30dp"
                android:text="கேள்வி 1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:text="கேள்வி"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout

            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/p_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
            <ImageView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_ques_img"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="20dp"
        android:text="பதில்"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/p_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#6FFF6F"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="20dp"
        android:text="விளக்கம்"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp">
        <LinearLayout

            android:background="#004465"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/p_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p_explain_img"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/issue"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_report"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/any_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="உங்கள் சிக்கலைப் புகாரளிக்கவும்"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="12sp"/>
            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prsadView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:background="#FFFFFF"
        android:id="@+id/bott"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>
            <Button
                android:id="@+id/p_prev"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="முன்"
                android:textAllCaps="false"
                android:textSize="14sp"/>
            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/p_next"
                android:theme="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:text="அடுத்து"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="14sp"/>

    </RelativeLayout>

</RelativeLayout>