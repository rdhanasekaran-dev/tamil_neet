<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".testFile.CommonTestActivity">
    <ScrollView
        android:layout_above="@id/bott"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="15dp"
                    android:id="@+id/questiont"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=". . ."
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/c_question_no"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="கேள்வி 1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:elevation="8dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="10dp"
                        android:id="@+id/c_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/c_quesImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp"
                    android:id="@+id/c_your_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="உங்கள் பதில்: "
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
                <TextView
                    android:visibility="gone"
                    android:padding="0dp"
                    android:id="@+id/c_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00"
                    android:text="சரி"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
                <TextView
                    android:visibility="gone"
                    android:padding="0dp"
                    android:id="@+id/c_wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F7221A"
                    android:text="தவறு"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/c_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <RadioButton
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading.."
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/c_t1"
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="A"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <RadioButton
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/c_t2"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="B"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <RadioButton
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading.."
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/c_t3"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="C"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <RadioButton
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading.."
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/c_t4"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="D"
                        android:textSize="14sp"
                        android:gravity="center" />
                    <RadioButton
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading.."
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/c_t5"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="E"
                        android:textSize="14sp"
                        android:gravity="center" />
                    <RadioButton
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radio_button_back"
                        android:id="@+id/c_radio_button6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/asul"
                        android:text="Loading.."
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/c_t6"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/white_circle"
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#000000"
                        android:text="F"
                        android:textSize="14sp"
                        android:gravity="center" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/c_issue"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_report"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/any_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="உங்கள் சிக்கலைப் புகாரளிக்கவும்"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="12sp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/c_question_dna_card"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="260dp">
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="கேள்வி விவரம்"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/black_dot"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/c_subject"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="70%"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/black_dot"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/c_correctPercent"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="70%"
                            android:gravity="center_vertical"
                            android:textColor="#FF0000"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="சரியான பதில் அளித்துள்ளார்கள்"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/black_dot"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/c_easy"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="எளிதான"
                            android:gravity="center_vertical"
                            android:textColor="#00FF00"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/c_medium"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="நடுத்தரமான"
                            android:gravity="center_vertical"
                            android:textColor="#FFFF00"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/c_hard"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="கடினமான"
                            android:gravity="center_vertical"
                            android:textColor="#FF0000"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="கேள்வி"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/black_dot"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/c_origin"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=" - "
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="கேள்வியைத் தவிர்க்க வேண்டாம்"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/c_explanation_card"
                android:background="#e0e0e0"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="விளக்கம்"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
                    <TextView
                        android:inputType="textMultiLine"
                        android:id="@+id/c_explanation"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="12sp"/>
                    <ImageView
                        android:id="@+id/c_explainImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#909090"/>

                    <LinearLayout
                        android:layout_marginBottom="100dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="இந்த விளக்கம் உதவியாக இருந்ததா?"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="11sp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/c_dislike_off"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_dislike_black"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center" />
                            <ImageView
                                android:id="@+id/c_dislike_on"
                                android:visibility="gone"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_dislike_color"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center" />
                            <ImageView
                                android:id="@+id/c_like_off"
                                android:layout_toLeftOf="@id/c_dislike_off"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_like_black"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center" />
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/c_like_on"
                                android:layout_toLeftOf="@id/c_dislike_off"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_like_color"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center" />


                        </RelativeLayout>
                    </LinearLayout>
                    <com.google.android.gms.ads.AdView
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ctadView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
                    </com.google.android.gms.ads.AdView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:background="#FFFFFF"
        android:id="@+id/bott"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/c_skip"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:text="தவிர்"
                android:textAllCaps="false"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/c_next"
                android:visibility="invisible"
                android:theme="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:text="அடுத்து"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="14sp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>