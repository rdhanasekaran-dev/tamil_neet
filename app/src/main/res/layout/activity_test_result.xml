<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".test.TestResultActivity">
    <ScrollView
        android:layout_above="@id/bott"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="தேர்வு முடிவு"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="தேர்வு செயல்திறன்"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="11sp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/piechart"/>
                    <TextView
                        android:id="@+id/result_percent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        android:textSize="34sp"
                        android:text="90%"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="தேர்வு பகுப்பாய்வு"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="11sp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/barchart"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.gms.ads.AdView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tradView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>



        </LinearLayout>


    </ScrollView>
    <RelativeLayout
        android:background="#FFFFFF"
        android:id="@+id/bott"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/next"
            android:theme="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="அடுத்து"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="14sp"/>

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>